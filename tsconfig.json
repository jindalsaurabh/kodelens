{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "Node16",
    "target": "ES2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "types": ["node"],
    "typeRoots": ["./typings", "./node_modules/@types"],

    /* Important! */
    "skipLibCheck": true,       /* Skip type-checking of declaration files */
    "esModuleInterop": true,    /* Allow default imports from CJS modules */
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "typings"],
  "exclude": [
    "node_modules",
    "dist",
    "out",
    "**/*.test.ts",
    "tree-sitter-sfapex",
    "tree-sitter-sfapex/**/*"
  ]
}

