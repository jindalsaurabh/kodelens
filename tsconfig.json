{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "Node16",
    "target": "ES2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "typeRoots": ["./typings", "./node_modules/@types"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node16",
    "isolatedModules": true

  },
  "include": ["src/**/*", "typings/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "out",
    "**/*.test.ts",
    "tree-sitter-sfapex",
    "tree-sitter-sfapex/**/*"
  ]
}