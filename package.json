{
  "name": "kodelens",
  "displayName": "kodelens-vscode",
  "publisher": "kodelens",
  "description": "Talk to your code",
  "version": "0.0.1",
  "engines": { "vscode": "^1.103.0" },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:kodelens.helloWorld",
    "onCommand:kodelens.parseApex"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      { "command": "kodelens.helloWorld", "title": "Kodelens: Hello World" },
      { "command": "kodelens.parseApex", "title": "Kodelens: Parse Apex File" }
    ]
  },
  "scripts": {
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production && vsce package --no-dependencies",
    "vsce-package": "vsce package --no-dependencies",
    "build-apex-wasm": "echo 'WASM already built and staged under media/apex/'"
  },
  "dependencies": {
    "web-tree-sitter": "^0.25.8"
  },
  "devDependencies": {
    "@types/emscripten": "^1.40.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist/**",
    "src/**",
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "media/**/*",
    "media/apex/tree-sitter-apex.wasm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jindalsaurabh/kodelens"
  }
}
