{
  "name": "kodelens",
  "displayName": "kodelens-vscode",
  "publisher": "kodelens",
  "description": "Talk to your code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:kodelens.parseApex"
  ],
  "vsce": {
    "includeDependencies": true
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kodelens.parseApex",
        "title": "Kodelens: Parse Apex File"
      },
      {
        "command": "kodelens.askQuestion",
        "title": "Kodelens: Ask a Question"
      },
      {
        "command": "kodelens.parseWorkspace",
        "title": "Kodelens: Parse Workspace"
      },
      {
        "command": "kodelens.findReferences",
        "title": "KodeLens: Find All References"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "kodelens-results",
          "name": "KodeLens Results"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "kodelens-results",
        "contents": "No search results yet. Use [KodeLens: Find All References](command:kodelens.findReferences) to find references to a symbol."
      }
    ]
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "compile": "npm run check-types && npm run lint && node esbuild.js --production",
    "build-apex-wasm": "cd tree-sitter-sfapex/apex && tree-sitter build --wasm && mkdir -p ../../media/apex && cp tree-sitter-apex.wasm ../../media/apex/",
    "package": "npm run compile && npx vsce package",
    "vscode:prepublish": "npm run compile",
    "test": "mocha -r ts-node/register/transpile-only \"test/**/*.test.ts\"",
    "clean": "rm -rf dist",
    "reinstall": "npm run compile && npm run package && code --uninstall-extension kodelens.kodelens && code --install-extension kodelens-0.0.1.vsix"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/vsce": "^3.6.0",
    "chai": "^6.0.1",
    "cpx": "^1.5.0",
    "electron": "^37.2.3",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.25.9",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.32.0",
    "esm": "^3.2.25",
    "mocha": "^11.7.1",
    "tree-sitter-sfapex": "github:aheber/tree-sitter-sfapex#3597575",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jindalsaurabh/kodelens.git"
  },
  "dependencies": {
    "@vscode/sqlite3": "^5.1.8-vscode",
    "web-tree-sitter": "^0.20.8"
  }
}
