{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "ignorePatterns": [
    "esbuild.js",
    "dist/",
    "media/"
  ],
  "rules": {
    "no-undef": "off",
    "@typescript-eslint/no-unused-vars": ["error"]
  }
}